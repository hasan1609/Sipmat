<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".admin.apar.TambahAparActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APAR BARU"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_kodeapar"
            android:visibility="gone"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/scanqr"
                android:backgroundTint="@color/black"
                android:text="SCAN QR CODE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:text="Kode APAR"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType=""
                android:text="Scan kode apar"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/txtkodeapar"
                android:background="@drawable/bg_edttext"
                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="Jenis APAR"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType=""
            android:id="@+id/spnjenis"
            android:text="Scan kode apar"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/bg_edttext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="Lokasi Penempatan"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType=""
            android:hint="Ketik"
            android:id="@+id/edtlokasi"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/bg_edttext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:text="Tanggal Pengisian"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType=""
            android:textSize="16dp"
            android:id="@+id/tglpengisian"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/bg_edttext"
            />



        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:text="Submit"
            android:id="@+id/btnsubmit"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            app:cornerRadius="12dp"
            />

        <com.google.android.material.button.MaterialButton
            android:text="Edit"
            android:id="@+id/btnedit"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            app:cornerRadius="12dp"
            />

    </LinearLayout>

</ScrollView>